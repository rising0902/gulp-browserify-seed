body {
  margin: 0;
  padding: 0;
  font-size: 15px;
}

nav {
  background-color: #333;
  margin: 0;
  overflow: hidden;
}

h1 {
  display: inline-block;
  color: #607D8B;
  margin: 0;
  padding: 0;
  font-size: 15px;
  float: left;
  line-height: 2em;
  padding: 0.5em 0.5em;
}

nav ul {
  float: left;
  margin: 0;
  padding: 0;
}

nav ul li {
  display: inline-block;
  list-style-type: none;
}

nav > ul > li > a {
  color: #aaa;
  background-color: #333;
  display: block;
  line-height: 2em;
  padding: 0.5em 0.5em;
  text-decoration: none;
}


